#!/usr/bin/env ruby

require_relative '../config/environment'

def start
  puts "Welcome to Tic Tac Toe!"
  puts "Would you like to play '0', '1', or '2' player?"
  input = gets.strip

  if input == "1"
    puts "Do you want to go first? [y/ n]"
    if gets.strip == "y"
      game = Game.new(Players::Human.new("X"), Players::Computer.new("O"), Board.new).play
    else
      game = Game.new(Players::Computer.new("X"), Players::Human.new("O"), Board.new).play
    end
  elsif input == "0"
    game = Game.new(Players::Computer.new("X"), Players::Computer.new("O"), Board.new).play
  elsif input == "2"
    game = Game.new(Players::Human.new("X"), Players::Human.new("O"), Board.new).play
  end
  puts "Would like to play again? [y/ n]"
  start unless input == "n"
end
